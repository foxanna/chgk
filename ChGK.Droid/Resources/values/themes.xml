<?xml version="1.0" encoding="UTF-8" ?>
<resources>
	<style name="Theme.Splash" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
	    <item name="android:windowBackground">@color/light_light_light</item>
	</style>

	<style name="ChGKTheme" parent="@android:style/Theme.Holo.Light">
		<item name="android:actionBarItemBackground">@drawable/selectable_background_chgk</item>
		<item name="android:windowBackground">@color/light_light_light</item>
		<item name="android:actionBarStyle">@style/ActionBar.Chgk</item>
        <item name="android:listViewStyle">@style/ListView.Chgk</item>
        <item name="android:expandableListViewStyle">@style/ExpandableListView.Chgk</item>
        <item name="android:buttonStyle">@style/Button.Chgk</item>
    	<item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb</item>
		<item name="android:scrollbarThumbVertical">@drawable/fastscroll_thumb</item>
		<item name="android:progressBarStyleLarge">@style/ProgressBar.ChGK</item>
		<item name="android:listDivider">@drawable/divider_gradient</item>
<!--		<item name="android:alertDialogTheme">@style/DialogChgk</item>-->
<!--		<item name="android:alertDialogStyle">@style/DialogChGKStyle</item>-->
		<item name="android:editTextStyle">@style/EditTextChgk</item>
		<item name="android:textColorHighlight">@color/light_transparent</item>
		<item name="android:checkboxStyle">@style/CheckBox.Chgk</item>
		<item name="android:progressBarStyleHorizontal">@style/ProgressBar.Chgk</item>
		<item name="android:editTextBackground">@drawable/edit_text</item>
	    <item name="android:textSelectHandleLeft">@drawable/text_select_handle_left</item>
	    <item name="android:textSelectHandleRight">@drawable/text_select_handle_right</item>
	    <item name="android:textSelectHandle">@drawable/text_select_handle_middle</item>
	    <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check</item>
	</style>

	<color name="dark">#98cc00</color>
	<color name="light">#d3e992</color>
	<color name="light_transparent">#99d3e992</color>       
	<color name="light_light">#e2f0b6</color>
	<color name="light_light_transparent">#66e2f0b6</color>
	<color name="light_light_light">#f8fff8</color>

	<style name="ActionBar.Chgk" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_transparent_chgk</item>
        <item name="android:showDividers">beginning</item>
    	<item name="android:divider">@drawable/divider_gradient</item>
    </style>

    <style name="ListView.Chgk" parent="@android:style/Widget.Holo.Light.ListView">
        <item name="android:listSelector">@drawable/selectable_background_chgk</item>
    	<item name="android:dividerHeight">1dp</item>
    	<item name="android:fadingEdge">@color/light</item>
    	<item name="android:cacheColorHint">@color/light_light</item>
	    <item name="android:fadingEdgeLength">20dp</item>
	    <item name="android:requiresFadingEdge">vertical</item>
		<item name="android:listDivider">@drawable/divider_gradient</item>
	    <item name="android:overScrollMode">never</item>
    </style>

    <style name="ExpandableListView.Chgk" parent="@android:style/Widget.Holo.Light.ExpandableListView">
        <item name="android:listSelector">@drawable/selectable_background_chgk</item>
        <item name="android:childDivider">@drawable/divider_gradient</item>
    	<item name="android:dividerHeight">1dp</item>
        <item name="android:fadingEdge">@color/light</item>
    	<item name="android:cacheColorHint">@color/light_light</item>
	    <item name="android:fadingEdgeLength">20dp</item>
	    <item name="android:requiresFadingEdge">vertical</item>
	    <item name="android:groupIndicator">@drawable/expander_group</item>
	    <item name="android:overScrollMode">never</item>
		<item name="android:listDivider">@drawable/divider_gradient</item>
    </style>

    <style name="ProgressBar.ChGK" parent="@android:attr/progressBarStyleLarge">
    	<item name="android:indeterminateDrawable">@drawable/progress_bar</item>
    </style>

    <style name="DialogChgk" parent="@android:style/Theme.Holo.Light.Dialog">  
        <item name="android:windowTitleStyle">@style/DialogWindowTitleChgk</item>
	</style>

	<style name="DialogTitleTextAppearance" parent="@android:style/TextAppearance.DialogWindowTitle">
		<item name="android:textColor">@color/dark</item>
    </style>

	<style name="DialogWindowTitleChgk">
		<item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/DialogTitleTextAppearance</item>
    </style>

    <style name="EditTextChgk" parent="android:Widget.Holo.Light.EditText">
	  <item name="android:background">@drawable/edit_text</item>
	  <item name="android:textColor">#000000</item>
    </style>

    <style name="CheckBox.Chgk" parent="android:Widget.Holo.Light.CompoundButton.CheckBox">
		<item name="android:button">@drawable/btn_check</item>
    </style>

  	<style name="Button.Chgk" parent="android:Widget.Holo.Light.Button">
		<item name="android:background">@drawable/btn_default</item>
		<item name="android:minHeight">48dip</item>
		<item name="android:minWidth">64dip</item>
		<item name="android:textColor">#000000</item>
  	</style>

	<style name="ProgressBar.Chgk" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
		<item name="android:progressDrawable">@drawable/progress_horizontal</item>
<!--		<item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal</item>-->
		<item name="android:minHeight">16dip</item>
		<item name="android:maxHeight">16dip</item>
	</style>
</resources>